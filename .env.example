# Public base URL (must include scheme, no trailing slash)
PUBLIC_BASE_URL=https://example.mooo.com
N8N_PUBLIC_HOST=example.mooo.com

# Traefik / Let's Encrypt
TRAEFIK_ACME_EMAIL=you@example.com

# Global timezone
GENERIC_TIMEZONE=Europe/Berlin
N8N_PROXY_HOPS=1
N8N_SECURE_COOKIE=true

# Shared Postgres admin (single Postgres service)
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=change-me-postgres-admin-password
POSTGRES_ADMIN_DB=postgres

# Ticketing Postgres
TICKETING_DB_USER=ticketing
TICKETING_DB_PASSWORD=change-me-ticketing-db-password
TICKETING_DB_NAME=ticketing

# Keycloak Postgres
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=change-me-keycloak-db-password
KEYCLOAK_DB_NAME=keycloak

# Keycloak bootstrap admin (for Keycloak service)
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=change-me-keycloak-admin-password

# Ticketing API -> Keycloak integration
KEYCLOAK_REALM=ticketing
KEYCLOAK_CLIENT_ID=myclient
KEYCLOAK_API_ADMIN_USER=AdminUser
KEYCLOAK_API_ADMIN_PASSWORD=change-me-keycloak-api-admin-password

# MinIO (Ticket attachments)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change-me-minio-password
MINIO_BUCKET=ticketing-attachments

# n8n Postgres
N8N_DB_USER=n8n
N8N_DB_PASSWORD=change-me-n8n-db-password
N8N_DB_NAME=n8n
